<p id="notice"><% notice %></p>
<h1>Property Detail</h1>
<p>
  <strong>Property Name:</strong>
  <%= @property.property_name %>
</p>
<p>
  <strong>Rent:</strong>
  <%= @property.rent.to_s(:delimited) %>Â¥
</p>
<p>
  <strong>Address:</strong>
  <%= @property.address %>
</p>
<p>
  <strong>Building Age:</strong>
  <%= @property.age %> Years
</p>
<p>
  <strong>Remarks:</strong>
  <%= @property.remarks %>
</p>
<hr>
<% if @property.stations.any? %>
  <% @stations.each.with_index(1) do |station, index| %>
    <h3><%= "Nearest Station #{index}" %></h3>
    <p>
      <strong>Name of railway:</strong>
      <%= station.line %>
    </p>
    <p>
      <strong>Station Name:</strong>
      <%= station.station_name %>
    </p>
    <p>
      <strong>How many minutes walk:</strong>
      <%= station.minutes %> min/mins
    </p>
  <% end %>
<% end %>
<br>
